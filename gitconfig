[core]
	autocrlf = false
	editor = vim
        gitProxy = git-proxy
[user]
	name = Xin Zhang
	email = zhangxin.xa@gmail.com
[push]
	default = simple
[pull]
	ff = only
[diff]
	tool = vimdiff
[alias]
	ls = status
	l = log --graph --stat
	co = checkout
	sdiff = !git diff && git submodule foreach 'git diff'
	spush = push --recurse-submodules=on-demand
	supdate = submodule update --remote --merge
[status]
	submodulesummary = on
[credential]
	helper = cache
[url "https://github.com/"]
	insteadOf = git://github.com/
